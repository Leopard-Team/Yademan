<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/colorPrimary"
    android:elevation="5dp"
    android:minHeight="?attr/actionBarSize"
    tools:targetApi="lollipop">

    <ImageButton
        android:id="@+id/toolbarBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:backgroundTint="@color/darkGreen"
        android:contentDescription="@string/toolbar_back_button_description" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/toolbarNotifBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_notifications_black_24dp"
        android:backgroundTint="@color/darkGreen"
        android:contentDescription="@string/toolbar_sync_button"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/toolbarSyncBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/ic_cloud_download_black_24dp"
        android:backgroundTint="@color/darkGreen"
        android:contentDescription="@string/toolbar_sync_button"
        android:visibility="gone" />
    <Spinner
        android:id="@+id/select_lesson_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/spinner_background"
        android:gravity="end"
        android:prompt="@string/spinner_title"
        android:visibility="gone"/>

</android.support.v7.widget.Toolbar>
